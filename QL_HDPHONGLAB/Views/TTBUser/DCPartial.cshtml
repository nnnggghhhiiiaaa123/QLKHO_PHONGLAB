@using QL_HDPHONGLAB.Models
@model List<DUNGCU>
@{
    ViewBag.Title = "DCPartial";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<h3 style="text-align: center">DANH SÁCH DỤNG CỤ MƯỢN</h3>
@{
    foreach (var item in Model)
    {
        <div class="col-3" style="float: left; margin: 15px; margin-left: 50px;">

            <img src="~/images/dungcu/@item.HINHANH" style="width: 100%; height: 100%; text-align: center;">
            @if (item.TENDC.Length > 30)
            {
                <p style="text-align: center;">
                    <strong title="@item.TENDC">@item.TENDC.Substring(0, 30)...</strong><br />
                    <a class="btn btn-secondary" href="@Url.Action("DangKyMuonDC", new{@msp =item.MADC})" style="text-decoration: none">Xem chi tiết</a>
                </p>
            }
            else
            {
                <p style="text-align: center;">
                    <strong title="@item.TENDC">@item.TENDC</strong><br />
                    <a class="btn btn-secondary" href="@Url.Action("DangKyMuonDC", new{@msp = item.MADC})" style="text-decoration: none">Xem chi tiết</a>
                </p>
            }
        </div>
    }
}