@using QL_HDPHONGLAB.Models
@model List<CT_PHIEUTRA>
@{
    ViewBag.Title = "Chi Tiết Phiếu Trả";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{ 
    IEnumerable<PHIEUTRA> lstPM = ViewBag.PhieuTra as IEnumerable<PHIEUTRA>;
    PHIEUTRA pt = ViewBag.PhieuTra as PHIEUTRA;
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Phiếu Trả</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Phiếu Trả</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã Phiếu Trả: @pt.MAPT</div>
                                <div class="mb-3">Ngày Trả: @pt.NGAYTRA</div>
                                <div class="mb-3">Duyệt: @pt.CHAPNHAN</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-12 mb-5">
            <div id="checkboxTable">
                <div style="float:left;">
                    <a href="/Admin/PhieuTra/DanhSachPhieuTra" class="btn btn-danger">Trở Về</a>
                </div>

            </div>
        </div>
    </div>
    <!-- #endregion -->
</div>