                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NGAYNHAP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LUONGTON)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LUONGTHANHLY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GIOSD)
