@using QL_HDPHONGLAB.Models
@model List<CT_PHIEUMUON>
@{
    ViewBag.Title = "Chi Tiết Phiếu Mượn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    IEnumerable<PHIEUMUON> lstPM = ViewBag.PhieuMuon as IEnumerable<PHIEUMUON>;
    PHIEUMUON pm = ViewBag.PhieuMuon as PHIEUMUON;
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Phiếu Mượn</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Phiếu Mượn</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã Phiếu Mượn: @pm.MAPM</div>
                                <div class="mb-3">Ngày Mượn: @pm.NGAYMUON</div>
                                <div class="mb-3">Duyệt: @pm.CHAPNHAN</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-12 mb-5">
            <div id="checkboxTable">
                <div style="float:left;">
                    <a href="/Admin/PhieuMuon/DanhSachPhieuMuon" class="btn btn-danger">Trở Về</a>
                </div>

            </div>
        </div>
    </div>
    <!-- #endregion -->
</div>