@using QL_HDPHONGLAB.Models
@model HOACHAT
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="titile">Chi Tiết</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Hoá Chất</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã Hoá Chất: @Model.MAHC</div>
                                <div class="mb-3">Tên Hoá Chất: @Model.TENHC</div>
                                @if(Model.MALHC == 1)
                                {
                                    <div class="mb-3">Số Lượng: @Model.LUONGTON Chai</div>
                                }
                                else
                                {
                                    <div class="mb-3">Số Lượng: @Model.LUONGTON Kg</div>
                                }
                                <div class="mb-3">Số Cas: @Model.CASNO</div>
                                @if(Model.GIANHAP != 0)
                                {
                                    <div class="mb-3">Giá Nhập: @string.Format("{0:0,0}", Model.GIANHAP) VNĐ</div>
                                }
                                else
                                {
                                    <div class="mb-3">Giá Nhập: 0 VNĐ</div>
                                }
                                @*<div class="mb-3">Loại Hoá Chất: @Model.LOAIHOACHAT.TENLHC</div>*@
                                <div class="mb-3">Hình ảnh: <img src="~/images/hoachat/@Model.HINHANH" style="width:50px; height:50px;" /></div>
                            </div>
                            <div>
                                <a href="/Admin/HOACHATs/Index" class="btn btn-danger">Trở Về</a>
                                <a href="/Admin/HOACHATs/Edit?id=@Model.MAHC" class="btn btn-primary">Cập Nhật</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

